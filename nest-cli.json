{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "src/main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "src/email-templates/**/*", "outDir": "dist/src" },
      { "include": "src/locale/**/*", "outDir": "dist/src" },
      {
        "include": "infra/chart/values/*.yaml",
        "outDir": "dist/infra/"
      }
    ],
    "watchAssets": true
  }
}
